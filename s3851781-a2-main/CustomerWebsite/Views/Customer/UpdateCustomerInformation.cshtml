@model UpdateCustomerViewModel
@{
    ViewData["Title"] = "Update Customer Information";
}

<div class="p-2"></div>
<div>
    <a asp-action="CustomerInformation">Back to My Profile</a>
</div>
<div class="p-2"></div>

<h1 class="display-4">Update Customer Information</h1>

<form asp-action="UpdateCustomerInformation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="Name" class="control-label">Name</label>
        <input id="Name" name="Name" class="form-control"
                value="@Model.Name"
                data-val="true"
                data-val-required="The Name field is required." />
        @Html.ValidationMessage("Name", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="TFN" class="control-label">TFN</label>
        <input id="TFN" name="TFN" class="form-control"
                value="@Model.TFN"
                data-val="true" />
        @Html.ValidationMessage("TFN", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Address" class="control-label">Address</label>
        <input id="Address" name="Address" class="form-control"
                value="@Model.Address"
                data-val="true" />
        @Html.ValidationMessage("Address", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="City" class="control-label">City</label>
        <input id="City" name="City" class="form-control"
                value="@Model.City"
                data-val="true" />
        @Html.ValidationMessage("City", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="State" class="control-label">State</label>
        <input id="State" name="State" class="form-control"
                value="@Model.State"
                data-val="true" />
        @Html.ValidationMessage("State", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="PostCode" class="control-label">PostCode</label>
        <input id="PostCode" name="PostCode" class="form-control"
                value="@Model.PostCode"
                data-val="true" />
        @Html.ValidationMessage("PostCode", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Mobile" class="control-label">Mobile</label>
        <input id="Mobile" name="Mobile" class="form-control"
                value="@Model.Mobile"
                data-val="true" />
        @Html.ValidationMessage("Mobile", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Update" class="btn btn-primary" />
</form>
       

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}