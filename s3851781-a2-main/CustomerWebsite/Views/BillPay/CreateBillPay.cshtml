@model CreateBillPayViewModel
@{
    ViewData["Title"] = "Create Bill Pay";
}

<div class="p-2"></div>
<div>
    <a asp-action="Index">Back to Bill Pay</a>
</div>
<div class="p-2"></div>
            
<h1 class="display-4">Create BillPay</h1>

<form asp-action="CreateBillPay">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="AccountNumber" class="control-label">Account Number</label>
        <input id="AccountNumber" name="AccountNumber" class="form-control"
               value="@Model.AccountNumber"
                data-val="true" />
        @Html.ValidationMessage("AccountNumber", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        <label for="PayeeID" class="control-label">Payee ID</label>
        <input id="PayeeID" name="PayeeID" class="form-control"
               value="@Model.PayeeID"
                data-val="true" />
        @Html.ValidationMessage("PayeeID", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Amount" class="control-label">Amount</label>
        <input id="Amount" name="Amount" class="form-control"
               value="@Model.Amount"
               data-val="true" />
        @Html.ValidationMessage("Amount", new { @class = "text-danger" })
    </div>
        
    <div class="form-group">
        <label for="ScheduleTimeUTC" class="control-label">Schedule Time UTC</label>
        <input id="ScheduleTimeUTC" name="ScheduleTimeUTC" class="form-control"
               value="@Model.ScheduleTimeUtc"
               type="datetime-local"
               data-val="true" />
        @Html.ValidationMessage("ScheduleTimeUTC", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Period" class="control-label">Period</label>
        <select id="Period" name="Period" class="form-control"
                value="@Model.Period"
                data-val="true">
            <option value="O">One Time</option>
            <option value="M">Monthly</option>
        </select>
        @Html.ValidationMessage("Period", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
</form>
       

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}